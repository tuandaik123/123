<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <link rel="stylesheet" href="css/style.css">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.css" rel="stylesheet" />
</head>
<body>
    @{ var user = Session["KhachHang"] as BanSach.Models.KhachHang;}
    @RenderBody()
    <header class="header">
        <a href="index.html" class="logo"><img src="~/Content/img/logo.PNG" alt="" style="width:100px;height:auto; " /></a>

        <nav class="navbar">
            <a href="/Home/Index">HOME</a>
            <a href="/Home/Menu">PRODUCTS</a>
            <a href="/Home/LienHe">CONTACT</a>
            
        </nav>
        <div class="icons">
            <div id="menu-btn" class="fas fa-bars"></div>


            @Html.Action("GioHangPartial", "GioHang")

            @{if (user == null)
                {
                    <a href="@Url.Action("DangNhap", "Home")" class="DangNhap">
                        <div id="login-btn" class="fas fa-user"></div>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("DangXuat", "Home")" class="DangNhap">
                        <div id="login-btn" class="fas fa-sign-out"></div>
                    </a>
                }
            }
            <div id="menu-search" class="fas fa-search"></div>
        </div>
        <div id="txtTimKiem">

            @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
            {
                @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "textBoxTimKiem", @placeholder = "Search here..." })
            }

        </div>


    </header>







    <section id="footer" style="margin-top:4rem;">
        <div class="body-footer">
            <div class="part-footer">
                <div class="title-footer">
                    <h4><span>CONTACT US</span></h4>
                </div>
                <div class="content-footer">
                    <ul>
                        <li>
                            <p><i class="fa-solid fa-location-dot"></i> 06 Trần Văn Ơn, Phú Hoà, Thủ Dầu Một, Bình Dương</p>
                        </li>
                        <li>
                            <p><i class="fa-solid fa-phone"></i> 0966933624</p>
                        </li>
                        <li>
                            <p><i class="fa-solid fa-envelope"></i> LVshop@gmail.com</p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="part-footer">
                <div class="title-footer">
                    <h4><span>ABOUT US</span></h4>
                </div>
                <div class="content-footer">
                    <ul>
                        <li>
                            <a href="#">Giới thiệu</a>
                        </li>
                        <li>
                            <a href="#">Chính sách đổi trả hàng</a>
                        </li>
                        <li>
                            <a href="#">Chính sách giao nhận</a>
                        </li>
                        <li>
                            <a href="#">Chính sách thanh toán</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="part-footer">
                <div class="title-footer">
                    <h4><span>ĐĂNG KÝ NHẬN THÔNG TIN</span></h4>
                </div>
                <div class="content-footer">
                    <input type="text" placeholder="Nhập email của bạn" class="inp-email-footer">
                    <button type="submit" class="submit-email-footer">Đăng ký</button>
                </div>
            </div>
        </div>
        <div class="icon-fl">
            <i class="fa-brands fa-facebook-f"></i>
            <i class="fa-brands fa-instagram"></i>
            <i class="fa-brands fa-tiktok"></i>
        </div>
        <div class="last-footer">
            <p>Copyright © 2023 - Bản quyền thuộc LVSHOP</p>
        </div>
    </section>

    <script src="~/Content/js/js.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    

    <script src="~/Scripts/js/main.js"></script>
</body>
</html>