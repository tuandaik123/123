@using BanSach.Models;

@model Sach
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/IndexLayout.cshtml";
}

<style>
    #divNoiDungBenPhai {
        display: none;
    }

    #divMenuSlider {
        display: none;
    }
</style>

<div id="ToanBo">
    <div id="HinhAnh" style="padding-top:20rem;">
        <img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" alt="" />
    </div>

    <div id="ThongTin" style="padding-top:20rem;">
        <div id="TenSach">@Model.TenGiay</div>
        <div id="ChuDe">Chủ đề: @ViewBag.TenChuDe</div>
        <div id="NhaXuatBan">@ViewBag.NhaXuatBan</div>
        <div id="Mota" style="font-size:12pt;">Nội dung tóm tắt:<br />- @Model.MoTa</div>
        <div id="Gia"><span style="color:green; font-weight:normal;font-size:13pt;">Đơn giá</span><br /><span id="Gia">@string.Format("{0:0,0}", @Model.GiaBan) VNĐ</span></div>
        <br />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" style="cursor:pointer" value="Mua Hàng" id="btnGioHang" class="btn btn-primary" />
            
        }
    </div>
    <div style="clear:both"></div>
</div>


<style>

    #ToanBo{
        padding-left:20rem;

    }

    #HinhAnh{
        float:left;
        
    }

    #HinhAnh img{
        width:300px;
        height:300px;
    }

    #ThongTin{
        float:left;
        width:600px;
        margin-left:30px;
    }

    #TenSach{
        font-weight:normal;
        font-size:18pt;
        height:auto;
        word-wrap:break-word;
        color:red;
    }

    #ChuDe, #NhaXuatBan{
        font-size:15pt;
        font-weight:normal;
        color:black;
        height:auto;
    }

    #Mota{
        font-weight:normal;
        color:black;
        word-wrap:break-word;
        height:auto;
    }

    #Gia span#Gia{
        font-weight:normal;
        color:orange;
        font-size:25pt;
        height:auto;
    }

    #btnGioHang{
        
        background-color:black;
        
    }
        #btnGioHang:hover {
            background-color: #bac34e
        }

</style>



