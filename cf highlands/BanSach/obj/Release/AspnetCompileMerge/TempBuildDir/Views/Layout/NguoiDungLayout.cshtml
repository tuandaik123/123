<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/NguoiDungCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/NguoiDungLayout.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.css" rel="stylesheet" />
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
    

</head>
<body>
    @{ var user = Session["KhachHang"] as BanSach.Models.KhachHang;}
    <div id="ToanTrang">
        <section class="blank">
            <div class="flash">
                @*Tạo div đăng ký đăng nhập*@
                <div class="DangKyDangNhap">
                    @Html.Action("GioHangPartial", "GioHang")
                    @{if (user == null)
                        {
                            <i class="fa-solid fa-right-to-bracket"></i>
                            @Html.ActionLink("Đăng Ký", "DangKy", null, htmlAttributes: new { @class = "DangKy" })
                            <i class="fa-solid fa-user"></i>
                            @Html.ActionLink("Đăng Nhập", "DangNhap", null, htmlAttributes: new { @class = "DangNhap" })
                        }
                        else
                           {
                            <a>@user.HoTen @Html.ActionLink("Đăng Xuát", "DangXuat", null, htmlAttributes: new { @class = "DangNhap" })</a>
                            }
                        }
                    </div>

            </div>

            <div class="flash success" id="divDanhMuc">

                <div id="txtTimKiem">
                    @using (Html.BeginForm())
                    {
                        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "textBoxTimKiem", @placeholder = "Nhập vào từ khóa cần tìm" })
                    }
                    <div id="divHinhAnhTiemKiem">
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>

                <ul class="navMenu">
                    <li>
                        <a href="/Home/Index">Trang chủ</a>
                    </li>
                    <li>
                        <a href="#">Giới thiệu</a>
                    </li>
                    <li>
                        <a href="#">Liện Hệ</a>
                    </li>
                    <li>
                        <a href="#">Hướng dẫn</a>
                    </li>
                    <li>
                        <a href="#">Sách</a>
                    </li>
                </ul>
            </div>
        </section>

        <section>
            <div id="divMenuLeft">

                <div class="activity">

                    @Html.Action("SachMoiPartial","Sach")

                  
                </div>
            </div>
            <div id="slider" class="nivoSlider">
                <img src="~/HinhAnh/slide1.jpg" />
                <img src="~/HinhAnh/slide2.jpg" />
                <img src="~/HinhAnh/slide3.jpg" />
                <img src="~/HinhAnh/slide4.jpg" />
            </div>
            <div style="clear:both"></div>
        </section>
        @*Div body*@
        <div id="NoiDung">
            @RenderBody()

        </div>
        <section>
            <div>
                
            </div>

            <hr>

            <div style="clear:both"></div>
        </section>
        
            <section class="blank items">
                <div id="divLeft">
                    <div class="item">
                        <div id="divLeft"></div>
                        <div class="item-info">
                            @Html.Action("NhaXuatBanPartial","NhaXuatBan")
                            
                        </div>
                        <img src="~/HinhAnh/maincol_img.gif" alt="" />
                    </div>
                </div>
                <div id="divRight">
                    @RenderSection("Scripts", required: false)
                    @RenderSection("NoiDungBenPhai", required: false)


                </div>
                    <div style="clear:both"></div>

                    <div>
                        <a href="#" class="button button-buy">Chào mừng các bạn đã đến với khóa học trực tuyến trên Myclass.vn</a>
                    </div>
                
               
        </section>
    </div>



   
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider({
                controlNav: false,
                nextText: '',
                prevText:'',
            });
        });
    </script>
</body>
</html>
