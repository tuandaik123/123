@using BanSach.Models;
@model List<Sach>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />

@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/IndexLayout.cshtml";
}


@ViewBag.Sach

@{ int i = 0;}
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="100" height="150">"</div>
        <div id="ThongTin">
            <div id="TenSach">@item.TenSach</div>
            <div id="DonGia"><font color="Green"><span id="Gia">@string.Format("{0:0,0}", item.GiaBan) VNĐ</span></font></div>
        </div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }
}
