@using BanSach.Models;
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@model List<Sach>

@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}


@{ int i = 0;}
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="100" height="150">"</div>
        <div id="ThongTin">
            <div id="TenSach" style="align-items:center">@item.TenSach</div>
            <div id="DonGia" style="color:orange;width:50px;"><font color="Green" margin="5px"> Giá: </font>@item.GiaBan</div>
        </div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }
}



